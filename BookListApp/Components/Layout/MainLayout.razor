@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row">
            <div class="top-content">
                <h1 class="app-title">Book List App</h1>
                <p class="app-subtitle">Verwalten Sie Ihre Büchersammlung</p>
            </div>
        </div>

        <div class="content">
            @Body
        </div>
    </main>
</div>

<style>
    .page {
        display: flex;
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        margin: 0;
        padding: 0;
    }

    .sidebar {
        width: 280px;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        z-index: 100;
        flex-shrink: 0;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        width: calc(100% - 280px);
    }

    .top-row {
        background: white;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        padding: 0;
        position: relative;
        z-index: 50;
        width: 100%;
        min-height: 180px;
        display: flex;
        align-items: center;
    }

    .top-content {
        width: 100%;
        margin: 0;
        padding: 3rem 3rem;
        text-align: center;
        box-sizing: border-box;
    }

    .app-title {
        color: #2d3748;
        font-size: 3rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .app-subtitle {
        color: #718096;
        font-size: 1.4rem;
        margin: 0;
        font-weight: 400;
        line-height: 1.3;
    }

    .content {
        flex: 1;
        padding: 2.5rem 3rem;
        width: 100%;
        box-sizing: border-box;
    }

    @@media (max-width: 1200px) {
        .top-content {
            padding: 2.5rem 2rem;
        }

        .content {
            padding: 2rem;
        }

        .app-title {
            font-size: 2.6rem;
        }

        .app-subtitle {
            font-size: 1.2rem;
        }
    }

    @@media (max-width: 768px) {
        .page {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            height: auto;
        }

        main {
            width: 100%;
        }

        .top-row {
            min-height: 140px;
        }

        .top-content {
            padding: 2rem 1rem;
        }

        .content {
            padding: 1.5rem 1rem;
        }

        .app-title {
            font-size: 2.2rem;
            margin-bottom: 0.75rem;
        }

        .app-subtitle {
            font-size: 1.1rem;
        }
    }

    @@media (max-width: 480px) {
        .top-row {
            min-height: 120px;
        }

        .top-content {
            padding: 1.5rem 0.75rem;
        }

        .content {
            padding: 1.25rem 0.75rem;
        }

        .app-title {
            font-size: 1.9rem;
            margin-bottom: 0.5rem;
        }

        .app-subtitle {
            font-size: 1rem;
        }
    }
</style>
